<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="6dp"
    app:cardCornerRadius="15dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:id="@+id/header"
            >
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:layout_marginStart="2dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="2dp"
                android:layout_marginBottom="2dp"
                android:background="@drawable/back_shape"
                android:elevation="2dp"
                android:scaleType="center"
                android:src="@drawable/starbuks" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="10dp"

                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="20 Jun, 10:30"
                        android:textColor="#9796A1"
                        android:textSize="12dp"
                        android:layout_marginEnd="10dp"
                        />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/dot_icon"
                        android:layout_marginEnd="10dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3 Items"
                        android:textColor="#9796A1"
                        android:textSize="12dp"
                        android:layout_marginEnd="10dp"
                        />
                    <View
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="0dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$15.30"
                        android:textColor="@color/main_color"
                        android:textSize="16dp"

                        />


                </LinearLayout>
                <LinearLayout
                    android:id="@+id/restaurant_name_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:id="@+id/restaurant_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="6dp"
                        android:textColor="@color/black"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:text="Starbuck" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ok_icon" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/green_dot"
                        android:layout_marginEnd="6dp"
                        android:layout_gravity="center_vertical"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Order Delivered"
                        android:textColor="#4EE476"
                        android:textSize="12dp"
                        />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingVertical="3dp"
            android:layout_below="@+id/header"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            >

            <TextView
                android:id="@+id/rate"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@drawable/social_btn_bg"
                android:elevation="3dp"
                android:layout_marginStart="3dp"
                android:gravity="center"
                android:paddingVertical="6dp"
                android:text="Rate"
                android:layout_marginVertical="3dp"
                android:textAllCaps="false"
                android:textColor="#111719"
                android:textSize="15dp"
                android:layout_marginEnd="20dp"

                />
            <TextView
                android:id="@+id/reorder"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@drawable/auth_btn_bg"
                android:elevation="3dp"
                android:layout_marginStart="3dp"
                android:gravity="center"
                android:paddingVertical="6dp"
                android:text="Re-Order"
                android:layout_marginVertical="3dp"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="15dp"

                />


        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>
